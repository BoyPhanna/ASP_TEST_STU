@model IEnumerable<Student> 
@{
    ViewData["Title"] = "All Students";
}

<h1 class="text-center">All Students information</h1>
<table class="table table-striped">
    <theader>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Score</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </theader>
    <tbody>
        @foreach (Student student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Score</td>
                <td><a class="btn btn-warning"
                asp-controller="Student"
                asp-action="Edit"
                asp-route-id="@student.Id"
                >Edit</a></td>
                <td><a class="btn btn-danger"
                     asp-controller="Student"
                    asp-action="Delete"
                    asp-route-id="@student.Id"
                >Delete</a></td>
            </tr>
        }
        
    </tbody>
</table>


